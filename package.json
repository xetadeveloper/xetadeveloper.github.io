{
  "name": "portfoliosite",
  "version": "1.0.0",
  "description": "A portfolio static website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "jek-create": "gem install jekyll bundler && jekyll new ./src",
    "wbp-dev-watch": "webpack serve --config webpack.dev.js",
    "wbp-dev": "webpack --config webpack.dev.js",
    "jek-dev": "bundle exec jekyll serve",
    "app-dev": "appRun",

    "jek-build": "echo \"Building Jekyll Site.....\" && bundle exec jekyll build",
    "jek-clean": "echo \"Cleaning Site Folder.....\" && jekyll clean",
    "wbp-build": "echo \"Bundling Files.....\" && webpack --config webpack.prod.js && echo \"Bundle Complete.....\"",
    "build-all": "npm run jek-clean && npm run jek-build && npm run wbp-build",

    "push-dev": "cd batchFiles && pushDevEnv.bat",
    "push-site": "cd batchFiles && pushSite.bat",
    "push-all" : "npm run push-dev && npm run push-site"
  },
  "author": "xeta",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "babel-loader": "^8.2.3",
    "chokidar": "^3.5.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.0",
    "eslint": "^8.2.0",
    "html-loader": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.4.3",
    "style-loader": "^3.3.1",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "feather-icons": "^4.28.0"
  }
}
